@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Log in to your account</h2>

        <form id="account" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4" role="alert"></div>

            <!-- Email -->
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Input.Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-300" autocomplete="username" placeholder="you@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input asp-for="Input.Password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-300" autocomplete="current-password" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
            </div>

            <!-- Remember Me -->
            <div class="flex items-center">
                <input class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-900">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <!-- Submit -->
            <div>
                <button id="login-submit" type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded">
                    Log in
                </button>
            </div>

            <!-- Links -->
            <div class="text-sm text-center mt-4 text-gray-600 space-y-1">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-indigo-600 hover:underline">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-indigo-600 hover:underline">Register as a new user</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-indigo-600 hover:underline">Resend email confirmation</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
