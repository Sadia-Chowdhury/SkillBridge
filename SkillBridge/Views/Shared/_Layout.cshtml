<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkillBridge</title>

    <!-- ✅ Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-900">

    <!-- ✅ NAVIGATION BAR -->
    <header>
        <nav class="bg-white border-b shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16 items-center">
                    <div class="flex items-center space-x-6">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-xl font-semibold text-blue-600">SkillBridge</a>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-blue-600 text-sm">Home</a>
                        <a asp-area="" asp-controller="JobPosts" asp-action="Index" class="text-gray-700 hover:text-blue-600 text-sm">Job Posts</a>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-gray-700 hover:text-blue-600 text-sm">Privacy</a>
                    </div>
                    <div>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ MAIN CONTENT -->
    <div class="max-w-7xl mx-auto p-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ FOOTER -->
    <footer class="border-t mt-10 text-sm text-gray-500 text-center py-4">
        <div>
            &copy; 2025 - SkillBridge —
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="hover:text-blue-600">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
