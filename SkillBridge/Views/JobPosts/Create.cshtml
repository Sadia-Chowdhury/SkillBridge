@model SkillBridge.Models.JobPost
@{
    ViewData["Title"] = "Post a Job";
}

<h2 class="text-2xl font-semibold mb-4">Post a New Job</h2>

<form asp-action="Create" method="post" class="space-y-4">
    <div>
        <label asp-for="JobTitle" class="block text-sm font-medium">Job Title</label>
        <input asp-for="JobTitle" class="form-input w-full rounded border-gray-300 mt-1" />
        <span asp-validation-for="JobTitle" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="CompanyName" class="block text-sm font-medium">Company Name</label>
        <input asp-for="CompanyName" class="form-input w-full rounded border-gray-300 mt-1" />
        <span asp-validation-for="CompanyName" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Location" class="block text-sm font-medium">Location</label>
        <input asp-for="Location" class="form-input w-full rounded border-gray-300 mt-1" />
        <span asp-validation-for="Location" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="SkillsRequired" class="block text-sm font-medium">Required Skills</label>
        <input asp-for="SkillsRequired" class="form-input w-full rounded border-gray-300 mt-1" />
        <span asp-validation-for="SkillsRequired" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Description" class="block text-sm font-medium">Job Description</label>
        <textarea asp-for="Description" class="form-textarea w-full rounded border-gray-300 mt-1"></textarea>
        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Deadline" class="block text-sm font-medium">Deadline</label>
        <input asp-for="Deadline" type="date" class="form-input w-full rounded border-gray-300 mt-1" />
        <span asp-validation-for="Deadline" class="text-red-500 text-sm"></span>
    </div>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Post Job
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
