@model SkillBridge.Models.JobPost

@{
    ViewData["Title"] = "Edit Job Post";
}

<div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
    <h1 class="text-2xl font-bold mb-6 text-gray-800">Edit Job Post</h1>

    <form asp-action="Edit" class="space-y-5">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="JobTitle" class="block text-sm font-medium text-gray-700">Job Title</label>
            <input asp-for="JobTitle" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="JobTitle" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="CompanyName" class="block text-sm font-medium text-gray-700">Company Name</label>
            <input asp-for="CompanyName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="CompanyName" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="Location" class="block text-sm font-medium text-gray-700">Location</label>
            <input asp-for="Location" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Location" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
            <input asp-for="Description" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Description" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="SkillsRequired" class="block text-sm font-medium text-gray-700">Skills Required</label>
            <input asp-for="SkillsRequired" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="SkillsRequired" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="PostedDate" class="block text-sm font-medium text-gray-700">Posted Date</label>
            <input asp-for="PostedDate" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="PostedDate" class="text-sm text-red-500"></span>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Save</button>
            <a asp-action="Index" class="text-gray-600 hover:underline">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
